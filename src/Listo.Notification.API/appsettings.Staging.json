{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "Listo.Notification": "Debug"
    }
  },
  
  "Notification": {
    "RetentionDays": 30
  },
  
  "RateLimiting": {
    "SmsPerMinute": 10,
    "EmailPerMinute": 20
  },
  
  "CostManagement": {
    "DefaultMonthlyBudgetUsd": 500.0
  },
  
  "Azure": {
    "SignalR": {
      "UseAzureSignalR": true
    },
    "BlobStorage": {
      "EnableCdn": false
    },
    "ApplicationInsights": {
      "EnableAdaptiveSampling": true,
      "SamplingPercentage": 75.0
    }
  },
  
  "FeatureFlags": {
    "EnableServiceBus": true,
    "EnableDetailedErrors": false,
    "EnableSwagger": true,
    "EnableApplicationInsights": true
  }
}
